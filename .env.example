# Client-only (exposed to browser)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Set to true to use browser SpeechSynthesis only (no Gradium TTS for intro, POI, answer, or outro)
NEXT_PUBLIC_USE_BROWSER_TTS=true

# Server-only (never expose)
OPENROUTER_API_KEY=

# Gradium TTS/STT — get key from https://gradium.ai
# Standard keys start with gd_, competition keys start with gsk_
GRADIUM_API_KEY=

# TTS WebSocket (recommended, faster streaming) - choose EU or US based on location
# EU: wss://eu.api.gradium.ai/api/speech/tts
# US: wss://us.api.gradium.ai/api/speech/tts
GRADIUM_TTS_WS_URL=wss://us.api.gradium.ai/api/speech/tts

# TTS POST fallback (if WebSocket fails)
# EU: https://eu.api.gradium.ai/api/post/speech/tts
# US: https://us.api.gradium.ai/api/post/speech/tts
GRADIUM_TTS_URL=https://us.api.gradium.ai/api/post/speech/tts

# STT - Leave empty to use browser SpeechRecognition fallback (recommended)
# Gradium STT is WebSocket-only. Set one of these to use server STT (requires ffmpeg for webm→PCM):
# EU: wss://eu.api.gradium.ai/api/speech/asr
# US: wss://us.api.gradium.ai/api/speech/asr
GRADIUM_STT_WS_URL=
# Legacy: wss URL here also enables Gradium STT
GRADIUM_STT_URL=

# See docs/GRADIUM_API_SETUP.md for detailed setup instructions
# Restart the dev server after changing environment variables
